<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.loginpage">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LoginPage">  <!-- Default theme for the app -->

        <!-- SplashActivity as the launcher activity -->
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.Splash"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity (Login Page) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.LoginPage"
            android:label="@string/app_name">
        </activity>

        <!-- HomeActivity (Home Screen) -->
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.LoginPage"
            android:label="@string/home">
        </activity>

        <!-- UserProfileActivity (User Profile Screen) -->
        <activity
            android:name=".UserProfileActivity"
            android:exported="true"
            android:theme="@style/Theme.LoginPage"
            android:label="@string/user_profile">
        </activity>

    </application>

</manifest>
